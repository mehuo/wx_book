.type-box{
  height: 51px;
  width: 100%;
  background-color: #363b58;
  position: fixed;
}
.record-type{
  height:30px;
  width:272px;
  border:1px solid #fff;
  color: #fff;
  border-radius:4px;
  text-align:center;
  line-height: 30px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -136px;
  margin-top: -15px;
  font-size: 14px;
}
.record-type .item{
  display: inline-block;
  width: 50%;
}
.record-type .item.active{
  background: #fff;
  color: #373c59;
}

.add-box{
  height: 40px;
  border-bottom: solid 1px #cdcdcd;
  padding: 6px 12px;
  margin-top:20px;
}
.add-box .add-icon{
  display:inline-block;
  widows:100%;
  width:50px;
  height:50px;
  border-radius:40px;
  line-height:50px;
  background:#ffbe02;
  padding:2px;
  box-sizing:border-box;
  vertical-align:middle;

}
.add-box .add-icon image{
  width: 100%;
  height: 100%;
}
.add-box .add-desc{
  display: inline-block;
  margin-left: 12px;
}
.add-box .add-num{
  display: inline-block;
  float: right;
  line-height: 40px;
}
.add-num input{
  margin-top:7px;
width:180px;
text-align:right;

}
.icons{
  padding: 12px 6px;
  position: relative;
  overflow: auto;
  top: 52px;
}
.icons .item{
  width:25%;
  display: inline-block;
  margin: 4px 0;
  text-align: center;
}
.icons .item .image-item{
  width: 50px;
  height: 50px;
  border-radius: 50px;
  margin: 0 auto;
  box-sizing: border-box;
}
.icons .item .image-item image{
  width: 100%;
  height: 100%;
}
.icons .item .text{
  color: #393a46;
  font-size: 14px;
  margin-top: 8px;
  margin-bottom: 28px;
}

.keyboard{
  position: fixed;
  z-index: 2;
  width: 100%;
  height: 238px;
  background: #fff;
  bottom: 0;
  left: 0;
}
.keyboard .input{
  height: 42px;
  width: 100%;
  border-bottom: solid 1px #f0f0f0;
  border-top: solid 1px #f0f0f0;
  line-height: 42px;
}
.keyboard .input .desc{
  float: left;
  width:60%;
  text-align:left;
  height:42px;
  line-height:42px;
  font-size:12px;
  padding-left:12px;
  box-sizing: border-box;
}
.keyboard .input .value{
  float: right;
  width: 40%;
  text-align: right;
  padding-right: 15px;
  box-sizing: border-box;
  line-height: 42px;
}
.keyboard .item{
  display: inline-block;
  text-align: center;
  line-height: 49px;
  width: 25%;
  height: 49px;
  border-bottom: solid 1px #f0f0f0;
  border-right: solid 1px #f0f0f0;
  box-sizing: border-box;
  font-size: 16px;
  color: #030303;
}
.keyboard .item:nth-child(4n){
  border-right: 0;
}
.yellow-bg{
  background: #fedd55;
}
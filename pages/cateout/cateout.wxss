.record-type{
  height:26px;
  width:140px;
  border:1px solid #ffbe02;
  color: #ffbe02;
  border-radius:4px;
  margin:12px auto;
  text-align:center;
  line-height: 26px;

}
.record-type .item{
  width: 50%;
}
.record-type .item.active{
  background: #ffbe02;
  color: #fff;
}

.add-box{
  height: 40px;
  border-bottom: solid 1px #cdcdcd;
  padding: 6px 12px;
  margin-top:20px;
}
.add-box .add-icon{
  display:inline-block;
  widows:100%;
  width:40px;
  height:40px;
  border-radius:40px;
  border:solid 1px #ffbe02;
  line-height:40px;
  background:#ffbe02;
  padding:2px;
  box-sizing:border-box;
  vertical-align:middle;

}
.add-box .add-icon image{
  width: 100%;
  height: 100%;
}
.add-box .add-desc{
  display: inline-block;
  margin-left: 12px;
}
.add-box .add-num{
  display: inline-block;
  float: right;
  line-height: 40px;
}
.add-num input{
  margin-top:7px;
width:180px;
text-align:right;

}
.icons{
  padding: 6px 0px;
}
.icons .item{
  width:20%;
  display: inline-block;
  margin: 4px 0;
  text-align: center;
}
.icons .item .image-item{
  width: 40px;
  height: 40px;
  border-radius: 40px;
  border:solid 1px #cdcdcd;
  margin: 0 auto;
  padding: 4px;
  box-sizing: border-box;

}
.icons .item .image-item image{
  width: 100%;
  height: 100%;
}
.icons .item .text{
  color: #101010;
  font-size: 12px;
  margin-top: 6px;
  margin-bottom: 10px;
}
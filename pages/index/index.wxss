/**index.wxss**/
.box{
  /* padding: 0 10px; */
}
image{
  vertical-align: middle;
}
.flex-wrp{
  display: flex;
  display: -webkit-flex;
  flex-direction:row;
}
.flex-wrp .flex-item{
  width:15%;
}
.header{
  width: 100%;
  background: #363b58;
}
.footer{
  width: 100%;
  height:49px;
  background: #f8f8f8;
  border-top:solid 1px #cdcdcd;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
}
.footer .icons{
  line-height: 49px;
}
.footer .icons image{
  width: 26px;
  height: 42px;
}
.headernav{
  padding: 24px 16px;
}
.book-select{
  height: 20px;
  color: #fff;
  font-size: 14px;
}
.share{
  border:solid 1px #838799;
  border-radius: 20px;
  color: #fff;
  font-size: 12px;
  padding: 0 13px;
  line-height: 20px;
  height: 20px;
  margin-left: 8px;
}
.oper_icon{
  float: right;
  margin-right: 16px;
}
.icon-size{
  width: 18px;
  height: 18px;
}
.result{
  background: #363b58;
  display: flex;
  display: -webkit-flex;
  text-align: center;
}
.result .item{
  width: 33%;
}
.result .item .desc{
  color: #838799;
  font-size: 12px;
  line-height: 18px;
}
.result .item .value{
  color: #fff;
  font-size: 16px;
  line-height: 24px;
  margin-bottom: 15px; 
}


.details{
  
}
.details .date-box{
  background:#f8f8f8;
  font-size:12px;
  padding:6px 10px;
  line-height:14px;

}
.details .cate-box{
  background:#fff;
  font-size:18px;
  padding:6px 10px;
}
.flex-wrp .flex-time{
  width: 60%;
  text-align: left;
}
.flex-wrp .flex-details{
  width: 50%;
  text-align: right;
}
.flex-wrp .flex-cate{
  width: 50%;
  text-align: left;
}
.flex-wrp .flex-blance{
  width: 50%;
  text-align: right;
  font-weight: bold;
}
.note-icon{
  width:34px;
  height:34px;
  background:#101010;
  border-radius:20px;
  margin:0 auto;
  color:#fff;
  line-height:34px;
  margin-top: 3px;

}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}